<!-- PAGE HEADER -->
<section class="parallax parallax-4" style="  background-image:url('<%= image_path('Rocket_Elevator_Assets/Residential_page/elavator1.jpg')  %>')">
  <div class="overlay dark-4"><!-- dark overlay [1 to 9 opacity] --></div>
</section>
<!-- /PAGE HEADER -->

<hr class="m-20" /><!-- 1px line separator -->

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 box-border-shadow p-20">

          <h2 class="fs-13 fw-600 mb-15">Forgot your password?</h2>              
          <hr>

          <div class="row">

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field form-label-group">
                <div class="fs-12 fw-600">
                  <%= f.label :email %><br />
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'form-control'%>
              </div>

              <div class="actions">
                <%= f.submit "Send me reset password instructions", class:"btn-lg btn-primary btn-block text-uppercase" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>          
          </div>
      
    </div>
  </div>
</div>
